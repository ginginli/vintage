{
  "version": 2,
  "functions": {
    "api/*.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "^/api/(.*)", "dest": "/api/$1" },
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^(.*)", "dest": "/public$1" }
  ]
}
